--- 
layout: default
---

<div id="main">
	<article>
		<header class="major">
			<h1 class="post-title"><a href="{{page.data.url}}">{{ title }}</a></h1>
			<img src="{{headerImg}}">
			<p class="post-meta">{{ page.date | postDate }}</p>
		</header>

		<section>
			
			{{ content | safe }} 

		</section>

		<section>
			{% if page.comments %} 
				{% include "./disqus.html" %} 
			{% endif %}
		</section>

	</article>

</div>
