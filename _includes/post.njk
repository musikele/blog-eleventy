--- 
layout: default
permalink: "/{{ page.date | toISODate }}/{{page.fileSlug }}.html"
---

<div id="main">
	<article>
		<section class="major">
			<div class="img-container">
          		<img src="{{headerImg}}">
        	</div>
			<h1 class="post-title"><a href="{{page.url}}">{{ title }}</a></h1>
			<div class="post-meta">{{ page.date | postDate }}</div>
		</section>

		<section>
			
			{{ content | safe }} 

		</section>

		<section>
			{% if page.comments %} 
				{% include "./disqus.html" %}
			{% endif %}
		</section>

	</article>

</div>
